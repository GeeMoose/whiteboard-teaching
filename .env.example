# Database Configuration
DATABASE_URL=sqlite:///./whiteboard_teaching.db
# For PostgreSQL: DATABASE_URL=postgresql://username:password@localhost:5432/whiteboard_teaching

# Redis Configuration (optional, for caching and real-time features)
REDIS_URL=redis://localhost:6379

# LLM API Keys (at least one required)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Animation Settings
ANIMATION_OUTPUT_DIR=./animations
MAX_ANIMATION_DURATION=300

# Security Settings
SECRET_KEY=your-secret-key-change-in-production-make-it-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_HOSTS=["http://localhost:3000", "http://127.0.0.1:3000"]